<div class="payment_info">
    <h2 >Đơn hàng của bạn</h2>
</div>
<div class="th-payment-product">
    <table id="cart_products_payment">
        <thead class="th-thead">
            <tr class="th-tr">
                <th class="th-th td-img" data-oe-model="ir.ui.view" data-oe-id="2206" data-oe-field="arch" data-oe-xpath="/t[1]/table[1]/thead[1]/tr[1]/th[1]">Sản phẩm</th>
                <th class="th-th text-center td-price" data-oe-model="ir.ui.view" data-oe-id="2206" data-oe-field="arch" data-oe-xpath="/t[1]/table[1]/thead[1]/tr[1]/th[4]">Giá</th>
            </tr>
        </thead>
        <tbody class="th-tbody">
            {{#products}}
                {{>local_th_edumy_cart/row_product_payment}}
            {{/products}}                     
        </tbody>
        <tfoot class="th-tfoot">
            <tr class="cart-subtotal th-tr">
                <th class="th-th">Tạm tính</th>
                <td class="th-td waiting-load"><span class="total_price_sale">{{total_price}}đ</span></td>
            </tr>
            <tr class="cart-subtotal th-tr">
                <th class="th-th">Giảm giá</th>
                <td class="th-td waiting-load"><span class="total_price_sale">{{sale_price}}đ</span></td>
            </tr>
            <tr class="order-total th-tr">
                <th class="th-th">Tổng thanh toán</th>
                <td class="th-td waiting-load"><span class="total_price_sale">{{total_price}}đ</span></td>
            </tr>
        </tfoot>
    </table>
    <div class="paymemt-coupon">
        <div class="coupon">
            <form method="POST">
                <input type="hidden" name="action" value="apply_discount_code" />
                <input type="text" autocomplete="off" name="discount_code" class="input-text paymemt-coupon-input" id="discount_code" value="" placeholder="Mã ưu đãi"> 
                <button type="submit" class="button paymemt-coupon-button" name="apply_coupon" value="Áp dụng">Áp dụng</button>
            </form>									
        </div>
    </div>
</div>
