{{!
    @template core/custom_menu_item

    This template renders a node as part of a submenu.

    Example context (json):
    {
        "divider": "",
        "haschildren": "1",
        "uniqid": "Unique string",
        "text": "Moodle community",
        "children": "[custom_menu_item object]",
        "title": "Moodle community",
        "url": "https://moodle.org"
    }
}}
{{#children}}
    {{^divider}}
        {{#haschildren}}
        <li class="nav-item">
            <a class="nav-link" href="#navbar-{{uniqid}}" id="collapse-{{uniqid}}" data-toggle="collapse" aria-expanded="false" {{#title}}title="{{{title}}}"{{/title}} aria-controls="navbar-{{uniqid}}">
                {{{text}}}
            </a>

            <div id="navbar-{{uniqid}}" class="collapse">
                <ul class="nav nav-sm flex-column">
                    {{#children}}
                        {{^divider}}
                            <li class="nav-item">
                                <a class="nav-link" href="{{{url}}}" data-key="{{uniqid}}" {{#title}}title="{{{title}}}"{{/title}}>
                                    {{{text}}}
                                </a>
                            </li>
                        {{/divider}}
                    {{/children}}
                </ul>
            </div>
        </li>
        {{/haschildren}}
        {{^haschildren}}
        <li class="nav-item">
            <a class="nav-link" href="{{{url}}}" {{#title}}title="{{{title}}}"{{/title}}>{{{text}}}</a>
        </li>
        {{/haschildren}}
    {{/divider}}
{{/children}}
