{{!
    Page footer.
}}
<div id="goto-top-link">
    {{! go to top is sticky to footer so needs to be sibling }}
    <a class="to-top" role="button" onclick='window.scrollTo({top: 0, behavior: "smooth"});' uk-totop></a>
</div>
<footer id="footer-wrapper" class="page-footer {{#footer_dark}}bg-default{{/footer_dark}}{{#footer_light}}bg-white{{/footer_light}}">

    {{# footer_content }}
    <div class="footer-top">
        <div class="{{{ output.get_footer_container_class }}}">
            {{{ footer_content }}}
            {{{ output.standard_footer_html }}}
        </div>
    </div>
    {{/ footer_content }}

    {{# has_footer_bottom }}
    <div class="footer-bottom">
        <div class="{{{ output.get_footer_container_class }}}">
            <div class="row">

                {{# footer_copyright_content }}
                <div class="left-box col-12 col-sm-6">
                    {{{ footer_copyright_content }}}
                </div>
                {{/ footer_copyright_content }}

                {{# footer_social_icons }}
                <div class="right-box col-12 col-sm-6">
                    {{{ footer_social_icons }}}
                </div>
                {{/ footer_social_icons }}

            </div>
        </div>
    </div>
    {{/ has_footer_bottom }}

    {{{ output.standard_end_of_body_html }}}
</footer>
