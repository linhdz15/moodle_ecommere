{{!
    @template theme_boost/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
        }
    }
}}
{{> theme_purity/head }}

<body {{{ bodyattributes }}} {{# login_page_bg_image_url }}style="background-image: url({{login_page_bg_image_url}}); background-size: cover; background-attachment: fixed; background-repeat: no-repeat;"{{/ login_page_bg_image_url }}>
{{> core/local/toast/wrapper}}

<div id="page-wrapper" class="login-panel-{{ login_panel_position_class }}">

    {{{ output.standard_top_of_body_html }}}

    <div id="page" {{# login_panel_center }}class="container-fluid mt-0"{{/ login_panel_center }}>
        <div id="page-content" {{# login_panel_center }}class="row"{{/ login_panel_center }}>
            <div id="region-main-box" {{# login_panel_center }}class="col-12"{{/ login_panel_center }}>
                {{# show_lang_menu }}
                <div class="login-lang-menu">
                    {{{ output.render_lang_menu }}}
                </div>
                {{/ show_lang_menu }}
                <section id="region-main" {{# login_panel_center }}class="col-12"{{/ login_panel_center }} aria-label="{{#str}}content{{/str}}">
                    <div class="login-container">
                        {{{ output.course_content_header }}}
                        {{{ output.main_content }}}
                        {{{ output.course_content_footer }}}
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
{{{ output.standard_end_of_body_html }}}
</body>
</html>


<style>

.login-card .input-username-wrapper .form-control, .login-card .input-password-wrapper .form-control {
    border-radius: 15px;
}

.login-card .btn{
    border-radius: 20px;
    background-color: #da258f;
    border-color: #da258f;
}



#page-login-index .login-container {
    max-width: 500px;
}

.login-container .card {
    display: flex;
    justify-content: center;
}

@media (min-width: 767.98px){
    .login-container .card {
        min-height: 0 !important;
    }

    .login-panel-left .login-container, .login-panel-right .login-container {
        border-top-left-radius: 20px !important;
        border-bottom-left-radius: 20px !important;
    }

    .login-panel-right .login-container .card{
        border-top-left-radius: 20px !important;
    }
}

</style>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function() {
  M.util.js_complete('theme_boost/loader');
});
{{/js}}
