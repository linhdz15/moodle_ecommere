{{!
    Page navbar.
}}
<nav class="top-navigation navbar navbar-top navbar-expand-lg border-bottom {{#header_light}}navbar-light bg-white{{/header_light}}{{#header_dark}}navbar-dark bg-default{{/header_dark}}" aria-label="{{#str}}sitemenubar, admin{{/str}}">

        <div data-region="drawer-toggle" class="d-inline-block nav-drawer-btn-container">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="nav-drawer-btn btn btn-primary btn-sm" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav">{{#pix}}i/menubars{{/pix}}<span class="sr-only">{{#str}}sidepanel, core{{/str}}</span></button>
        </div>

        <button class="custom-navbar-toggler btn btn-primary btn-sm" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">{{#pix}}i/menubars{{/pix}} Menu</button>

        <a href="{{{ config.wwwroot }}}" class="navbar-brand aabtn {{# output.should_display_header_logo }}has-logo{{/ output.should_display_header_logo }}
            {{^ output.should_display_header_logo }}
                d-none d-sm-inline
            {{/ output.should_display_header_logo }}
                ">
            {{# output.should_display_header_logo }}
                <span class="logo d-none d-sm-inline">
                    <img src="{{{ header_logo_url }}}" alt="{{sitename}}">
                </span>
            {{/ output.should_display_header_logo }}

            {{#show_header_sitename}}
                <span class="site-name d-none d-md-inline">{{{ sitename }}}</span>
            {{/show_header_sitename}}
        </a>

        <div class="collapse navbar-collapse {{#header_light}}navbar-light bg-white{{/header_light}}{{#header_dark}}navbar-dark bg-default{{/header_dark}}" id="navbarSupportedContent">
            <ul class="navbar-nav custom-menu d-md-flex">
                <!-- custom_menu -->
                {{{ output.custom_menu }}}
                <!-- page_heading_menu -->
                {{{ output.page_heading_menu }}}
            </ul>
        </div>

        <ul class="nav navbar-nav navbar-expand plugin-menu d-flex ml-auto">
            <li class="d-none d-lg-block">
                {{{ output.search_box }}}
            </li>
            <!-- navbar_plugin_output -->
            <li class="nav-item item-separator">
                {{{ output.navbar_plugin_output }}}
            </li>
            <!-- user_menu -->
            <li class="nav-item d-flex align-items-center">
                {{{ output.user_menu }}}
            </li>
        </ul>
        <!-- search_box -->
</nav>

